            android:id="@+id/tournamentCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:radius="16dp"
            app:cardBackgroundColor="#FFCDD2"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tournamentImage1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/german"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tournamentName1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="German Bundesliga"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/tournamentButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Tournament"
                    android:textColor="#000000" /> <!-- Text color only, no background -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tournament 2 -->
        <androidx.cardview.widget.CardView
