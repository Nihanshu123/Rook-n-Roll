<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/chessbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:text="Rook n Roll"
        android:background="@drawable/rounded_edittext_bg"
        android:textColor="@color/black"

        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:elevation="4dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign"
        android:text="Sign Up"
        android:textStyle="bold"
        android:background="@drawable/rounded_edittext_bg"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_below="@id/head"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_edittext_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sign"
        android:hint="Enter your Name"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:textSize="16sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/email"
        android:textColor="@color/black"
        android:layout_below="@id/name"
        android:background="@drawable/rounded_edittext_bg"
        android:layout_centerHorizontal="true"
        android:hint="Enter your Email"
        android:textColorHint="@color/black"
        android:padding="15dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress" />  <!-- Set input type for email -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:background="@drawable/rounded_edittext_bg"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_below="@id/email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Choose your Type:"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:layout_below="@id/type"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radio_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edittext_bg"
            android:text="Player"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio_id2"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_height="wrap_content"
            android:text="Coach"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio_id3"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_height="wrap_content"
            android:text="Both"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RadioGroup>
    <Button
        android:id="@+id/enter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rg"
        android:text="Enter"
        android:backgroundTint="@color/sky_blue"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button_bg"
        android:elevation="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/enter"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext_bg"
        android:textColor="@color/black"
        android:padding="5dp"
        android:text="Already have an account?"
        android:textStyle="bold"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:layout_below="@+id/enter"
        android:backgroundTint="@color/sky_blue"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button_bg"
        android:elevation="6dp" />



</RelativeLayout>
